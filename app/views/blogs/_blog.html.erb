<div class="blog-post">
  <h2 class="blog-post-title blog-content-justify"><%= link_to blog.title.upcase, blog %></h2>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words blog.created_at, Time.now %> ago</p>
  <% if logged_in?(:site_admin) %>
    <p class="blog-post-meta">
      <%= link_to blog.status.capitalize, toggle_status_blog_path(blog) %> /
      <%= link_to 'Edit', edit_blog_path(blog) %> /
      <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  <% end %>

  <p class="blog-content-justify"><%= blog.body %></p>
</div><!-- /.blog-post -->
